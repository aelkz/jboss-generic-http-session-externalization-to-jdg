<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
	<distributable/>
	<context-param>
		<param-name>jdg_cache</param-name>
		<param-value>default</param-value>
	</context-param>
	<context-param>
		<param-name>jdg_serverList</param-name>
		<param-value>${JDG_SERVICE_HOTROD_SERVICE_HOST}:${JDG_SERVICE_HOTROD_SERVICE_PORT}</param-value>
	</context-param>
	<listener>
	     <listener-class>
             com.redhat.jdg.demo.http.JdgAppContextListener
        </listener-class>
   </listener>
	 <!-- Auto scanning REST service -->
 <context-param>
 <param-name>resteasy.scan</param-name>
 <param-value>true</param-value>
 </context-param>

 <!-- Prefix need to be set if url pattern is not /* -->
 <context-param>
 <param-name>resteasy.servlet.mapping.prefix</param-name>
 <param-value>/rest</param-value>
 </context-param>
 <context-param>
	<param-name>resteasy.resources</param-name>
	<param-value>com.redhat.jdg.demo.service.SessionService,com.redhat.jdg.demo.service.JdgInfoService</param-value>
 </context-param>

 <listener>
 <listener-class>
 org.jboss.resteasy.plugins.server.servlet.ResteasyBootstrap
 </listener-class>
 </listener>

	 <servlet>
	  <servlet-name>resteasy-servlet</servlet-name>
	  <servlet-class>
	  org.jboss.resteasy.plugins.server.servlet.HttpServletDispatcher
	  </servlet-class>
	  </servlet>

	  <servlet-mapping>
	  <servlet-name>resteasy-servlet</servlet-name>
	  <url-pattern>/rest/*</url-pattern>
	  </servlet-mapping>

	 <filter>
		<filter-name>JsgSessionFilter</filter-name>
		<filter-class>com.redhat.jdg.demo.http.JdgSessionFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>JsgSessionFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>HtmlAuth</web-resource-name>
			<description>application security constraints</description>
			<url-pattern>/*</url-pattern>
			<url-pattern>/rest/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>jdguser</role-name>
		</auth-constraint>
	</security-constraint>
	<security-role>
		<role-name>jdguser</role-name>
	</security-role>
	<login-config>
		<auth-method>BASIC</auth-method>
		<realm-name>ApplicationRealm</realm-name>
	</login-config>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
